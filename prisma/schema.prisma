// ELYSIUM Database Schema
// Luxury jewelry e-commerce platform
// Architecture: Hybrid (Sanity CMS + PostgreSQL)

generator client {
  provider       = "prisma-client-js"
  engineType     = "binary"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// Users & Authentication
// ============================================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String?
  image         String?
  role          String    @default("CUSTOMER") // ADMIN | CUSTOMER
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts         Account[]
  sessions         Session[]
  profile          CustomerProfile?
  addresses        Address[]
  cartItems        CartItem[]
  orders           Order[]
  wishlistItems    WishlistItem[]
  productViews     ProductView[]
  inquiryNotes     InquiryNote[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// Customer Data
// ============================================

model CustomerProfile {
  id          String   @id @default(uuid())
  userId      String   @unique
  phone       String?
  dateOfBirth DateTime?
  preferences Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("customer_profiles")
}

enum AddressType {
  BILLING
  SHIPPING
}

model Address {
  id         String      @id @default(uuid())
  userId     String
  type       AddressType
  line1      String
  line2      String?
  city       String
  state      String?
  postalCode String
  country    String      @default("GB")
  isDefault  Boolean     @default(false)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  user            User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  billingOrders   Order[] @relation("BillingAddress")
  shippingOrders  Order[] @relation("ShippingAddress")

  @@map("addresses")
}

// ============================================
// Shopping Cart
// ============================================

model CartItem {
  id            String   @id @default(uuid())
  userId        String
  productSlug   String
  configuration Json
  quantity      Int      @default(1)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("cart_items")
}

// ============================================
// Orders
// ============================================

enum OrderStatus {
  PENDING
  PROCESSING
  PAYMENT_FAILED
  PAID
  FULFILLED
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

model Order {
  id                     String      @id @default(uuid())
  userId                 String?
  orderNumber            String      @unique
  status                 OrderStatus @default(PENDING)
  totalAmountGbp         Decimal     @db.Decimal(10, 2)
  currency               String      @default("GBP")
  stripePaymentIntentId  String?
  billingAddressId       String?
  shippingAddressId      String?
  customerEmail          String
  customerName           String?
  notes                  String?
  createdAt              DateTime    @default(now())
  updatedAt              DateTime    @updatedAt

  user            User?        @relation(fields: [userId], references: [id], onDelete: SetNull)
  billingAddress  Address?     @relation("BillingAddress", fields: [billingAddressId], references: [id])
  shippingAddress Address?     @relation("ShippingAddress", fields: [shippingAddressId], references: [id])
  items           OrderItem[]

  @@index([userId])
  @@index([orderNumber])
  @@index([status])
  @@map("orders")
}

model OrderItem {
  id             String  @id @default(uuid())
  orderId        String
  productSlug    String
  configuration  Json
  quantity       Int
  unitPriceGbp   Decimal @db.Decimal(10, 2)
  totalPriceGbp  Decimal @db.Decimal(10, 2)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

// ============================================
// Inventory Management
// ============================================

model Inventory {
  id                 String   @id @default(uuid())
  productSlug        String
  variantKey         String
  stockLevel         Int      @default(0)
  reservedStock      Int      @default(0)
  lowStockThreshold  Int      @default(5)
  lastUpdated        DateTime @default(now())

  @@unique([productSlug, variantKey])
  @@index([productSlug])
  @@map("inventory")
}

// ============================================
// Analytics & Customer Engagement
// ============================================

model WishlistItem {
  id            String   @id @default(uuid())
  userId        String
  productSlug   String
  configuration Json?
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productSlug])
  @@map("wishlist_items")
}

model ProductView {
  id          String   @id @default(uuid())
  userId      String?
  productSlug String
  sessionId   String?
  viewedAt    DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([productSlug])
  @@index([sessionId])
  @@map("product_views")
}

// ============================================
// Bespoke Leads (from contact form)
// ============================================

model BespokeLead {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  budget    String?
  notes     String?
  status    String   @default("NEW") // NEW | CONTACTED | QUOTED | NEGOTIATING | CONVERTED | LOST | ARCHIVED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  inquiryNotes InquiryNote[]

  @@map("bespoke_leads")
}

// ============================================
// Admin Communication Log
// ============================================

model InquiryNote {
  id        String   @id @default(uuid())
  leadId    String
  userId    String
  content   String   @db.Text
  createdAt DateTime @default(now())

  lead BespokeLead @relation(fields: [leadId], references: [id], onDelete: Cascade)
  user User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([leadId])
  @@map("inquiry_notes")
}
